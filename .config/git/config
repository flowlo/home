[user]
	name = Lorenz Leutgeb
	email = lorenz@leutgeb.xyz
	useconfigonly = true
[push]
	default = current
[core]
	editor = vim
	autocrlf = input
[help]
	autocorrect = 20
[color]
	ui = true
[merge]
	tool = meld
	ff = false
	keepBackup = false
[web]
	browser = google-chrome
[fetch]
	recurseSubmodules = true
	prune = true
[alias]
	month = log --no-merges --since='last month' --author=lorenz --reverse --pretty=format:'%cd %s %d' --date=short
	yesterday = log --no-merges --since='yesterday' --author=lorenz --reverse --pretty=format:'%cd %s %d' --date=short
	l = log --graph --decorate --show-signature --date=iso8601-strict --use-mailmap
	ignore-local = config --local core.excludesfile "/home/lorenz/gitignore"
	ignore-fetch = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	rebase-branch = "!grb() { git rebase -i $(git merge-base HEAD $@) ;}; grb"
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[rerere]
	enabled = true
	autoupdate = true
[branch]
	autosetuprebase = always
[pull]
	rebase = true
[alias]
	pr = "!f() { remote=${2-origin} ; git fetch $remote refs/pull/$1/head:#$1 ; } ; f"
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
[filter "gpg"]
	clean = "gpg --encrypt --recipient EBB1C984 -o- %f | git-lfs clean -- %f"
	smudge = "git-lfs smudge -- %f | gpg --decrypt --output %f"
